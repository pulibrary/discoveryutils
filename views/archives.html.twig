

{% block content %}
<div id="holdings{{ record_id }}">
    <ul>
        <li>
            <span>Access Statement: </span>
            {{ archival_holding.access }}
         </li>
         <li>
            <span>Physical Description: </span>
            {{ archival_holding.add_information }}
        </li>
        {% if archival_holding.summary_statement is defined %}
            <li>
                <span>Contents Summary: </span>
                {{ archival_holding.summary_statement }}
            </li>
        {% endif %}
        {% if archival_holding.collection_title is defined %}
            <li>
            <span>Collection: </span>
            {{ archival_holding.collection_title }}
            </li>
        {% endif %}
        {% if archival_holding.collection_description is defined %}
            <li>
                <span>Collection Description: </span>
                {{ archival_holding.collection_description }}
            </li>
        {% endif %}
        <li>
        <span>More Information: </span>
            <a href="{{ archival_holding.link_to_finding_aid }}" title="View Finding Aid for {{ doc_title }}">
                Source Finding Aid
            </a>
            &nbsp;|&nbsp;
            <a href="http://librarybeta.princeton.edu/searchit/archives/{{ record_id }}">
                Full Archival Holdings Page
            </a>
            &nbsp;|&nbsp;
            <a href="http://libwebdev.princeton.edu/searchit/record/{{ record_id }}.xml">
                Source PNX
            </a>
        </li>
    </ul>
    <div class="archival-items">
        <table class="archival-item-list EXLLocationTable">
            <thead>
            <tr>
                <th>Box Number</th>
                <th>Description</th>
                <th>Request Options</th>
            </tr>
            </thead>
            <tbody>
            {%  for item in items %}
                <tr>
                    <span style="display: none;">
                    {{ archival_holding.library }},
                    {{ item.location_code }},
                    {{ item.call_number }}
                    </span>
                    <td class="EXLLocationTableColumn1">{{ item.box_number }}</td>
                    <td class="EXLLocationTableColumn2">
                    {% if item.series_details is defined %}
                        {{ item.series_details }}
                    {% endif %}
                    </td>
                    <td class="EXLLocationTableColumn3">
                        <a class="btn small info" href='https://libweb10.princeton.edu/aeon/aeon.dll?'>Request</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}