

{% block content %}
<div id="holdings{{ record_id }}">
    <dl>
        <dt>Access Statement</dt>
        <dd>{{ archival_holding.access }}</dd>
        {% if archival_holding.summary_statement is defined %}
            <dt>Summary</dt>
            <dd>{{ archival_holding.summary_statement }}</dd>
        {% endif %}
        <dt>Description</dt>
        <dd>{{ archival_holding.add_information }}</dd>
        <dt>More Information</dt>
        <dd>
            <a href="{{ archival_holding.link_to_finding_aid }}" title="View Finding Aid for {{ doc_title }}">
                Source Finding Aid
            </a>
            &nbsp;|&nbsp;
            <a href="http://librarybeta.princeton.edu/searchit/archives/{{ record_id }}">
                Full Archival Holdings Page
            </a>
            &nbsp;|&nbsp;
            <a href="http://libwebdev.princeton.edu/searchit/record/{{ record_id }}.xml">
                Source PNX
            </a>

        </dd>
    </dl>
    <div class="archival-items">
        <table class="archival-item-list EXLLocationTable">
            <thead>
            <tr>
                <th>Box Number</th>
                <th>Description</th>
                <th>Request Options</th>
            </tr>
            </thead>
            <tbody>
            {%  for item in items %}
                <tr>
                    <span style="display: none;">
                    {{ archival_holding.library }},
                    {{ item.location_code }},
                    {{ item.call_number }}
                    </span>
                    <td class="EXLLocationTableColumn1">{{ item.box_number }}</td>
                    <td class="EXLLocationTableColumn2">
                    {% if item.series_details is defined %}
                        {{ item.series_details }}
                    {% endif %}
                    </td>
                    <td class="EXLLocationTableColumn3">
                        <a class="btn small info" href='https://libweb10.princeton.edu/aeon/aeon.dll?'>Request</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}